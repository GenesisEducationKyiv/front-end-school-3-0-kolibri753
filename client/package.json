{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:test": "tsc -b && vite build --mode test",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "type-check": "tsc --build --noEmit tsconfig.json",
    "test-ct": "playwright test -c playwright-ct.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test tests/playwright/specs/tracks-smoke.spec.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@mobily/ts-belt": "^3.13.1",
    "@tailwindcss/vite": "^4.1.4",
    "@tanstack/react-query": "^5.81.2",
    "@tanstack/react-query-devtools": "^5.81.2",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "eslint-plugin-neverthrow": "^1.1.4",
    "lucide-react": "^0.493.0",
    "neverthrow": "^8.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-router-dom": "^7.5.1",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.4",
    "wavesurfer.js": "^7.9.4",
    "zod": "^3.25.42",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@playwright/experimental-ct-react": "^1.53.1",
    "@playwright/test": "^1.53.1",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@tsconfig/vite-react": "^6.3.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "daisyui": "^5.0.27",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.1",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
